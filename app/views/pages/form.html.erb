<div class="container">
  <div class="card">
    <div class="text-align">
      <h3>Quelques questions pour te connaître</h3>
    </div>
  </div>
  <div class="card">
    <div data-controller="hello">
    <%= form_with url: "/results", method: :get do |f| %>
      <div class="gender">
        <%= f.label :gender, " Tu t'identifies en tant que ?" %>
        <%= f.radio_button :gender, "men", class: "radio" %>
        <%= f.label :gender, value: "men", class: "label-image" do %>
          <%= image_tag 'avatar_homme.png' %>
        <% end %>
        <%= f.radio_button :gender, "women", class: "radio" %>
        <%= f.label :gender, "Femme", value: "women", class:"label-image" do  %>
          <%= image_tag 'avatar_femme.png' %>
        <% end %>
      </div>

      <div class="card" data-controller="slider">
        <div class="slidecontainer">
          <%= f.label :weight, 'Quel est ton poid ? (kg)' %>
          <p data-slider-target="value"></p>
          <%= f.range_field :weight, min: 1, max: 150, class: "slider", data: { action: "input->slider#update"} %>
        </div>
      </div>

        <div class="card"  data-controller="slider">
          <div class="slidecontainer">
          <%= f.label :weight, 'Quel est ta taille ? (cm)' %>
          <p data-slider-target="value"></p>
            <%= f.range_field :size, min: 120, max: 230, class: "slider", data: { action: "input->slider#update"}  %>
          </div>
        </div>

          <div class="card">
            <div class="d-flex justify-content-around" >
              <div data-action="click->hello#update">
                <%= f.label :level, "Quel est votre niveau ?" %><br/>
                <%= f.radio_button :level, "Débutant", class:"radio", data: { hello_target: "deb" } %>
                <%= f.label :level, "Débutant", class: "filter-level", value: "Débutant"%>
                <%= f.radio_button :level, "Intermédiaire", class:"radio"%>
                <%= f.label :level, "Intermédiaire", class: "filter-level", value: "Intermédiaire" %>
                <%= f.radio_button :level, "Confirmé", class:"radio"%>
                <%= f.label :level, "Confirmé",class: "filter-level", value: "Confirmé" %>
              </div>
            </div>
          </div>

          <div class="card d-none" data-hello-target="level">
              <%= f.label :waves, 'Quelles types de vagues ?'%>
            <div class="waves">
              <%= f.radio_button :waves, "molle", class:"radio"%>
              <%= f.label :waves, "Molles", class: "filter-level", value: "molle"%>
              <%= f.radio_button :waves, "creuse", class:"radio" %>
              <%= f.label :waves, "Creuses", class: "filter-level", value: "creuse" %>
            </div>


            <div data-hello-target="level">
              <%= f.label :objective, 'Quel est ton objectif ?'%>
              <div class="objectif">
                <%= f.radio_button :objective, "Plaisir", class:"radio"  %>
                <%= f.label :objective, "Plaisir", class: "filter-level", value: "Plaisir"%>
                <%= f.radio_button :objective, "Performance", class:"radio" %>
                <%= f.label :objective, "Performance", class: "filter-level", value: "Performance" %>
              </div>
            </div>
          </div>

            <div class="justify-content-around">
              <%= f.label :temperature, "Dans quelle température d'eau as-tu l'habitude de surfer ?" %>
              <div data-hello-target="level" class="level" >
                <%= f.radio_button :temperature, "5 - 13", class:"radio" %>
                <%= f.label :temperature, "5 - 13", value: "5 - 13", class:"label-image d-flex flex-column" do %>
                  <%= image_tag 'avatar_froid.png'%>
                  <span>5° et 13°</span>
                <% end %>
                <%= f.radio_button :temperature, "13 - 20", class:"radio" %>
                <%= f.label :temperature, "13 - 20", value: "13 - 20", class:"label-image d-flex flex-column" do %>
                  <%= image_tag 'avatar_tmp_mod.png' %>
                  <span>13° et 20°</span>
                <% end %>
                <%= f.radio_button :temperature, "20 et +", class:"radio" %>
                <%= f.label :temperature, "20 et +", value: "20 et +", class:"label-image d-flex flex-column" do %>
                  <%= image_tag 'avatar_canicul.png' %>
                  <span>20° et +</span>
                <% end %>
              </div>
            </div>

        <div class="card">
          <div class="d-flex justify-content-center">
            <%= f.submit "voir les résultats", class: "btn btn-flat" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
